#:kivy 2.3.0

<MainScreen>:    
	
	GridLayout:
		
		cols: 1
		rows: 5
			
    	Button:
			id: main_flash_device
			text: 'Flash Device'
			font_size: root.height // 25
			#font_name: 'terminus'
			background_color: 0, 0, 0, 0
			color: 1, 1, 1, 1
			on_press: root.on_press(wid="main_flash_device")
    		on_release:
                root.on_release(wid="main_flash_device")
                root.set_screen(name="FlashScreen", direction="left")
			canvas.before:
        		Color:
            		rgba: 1, 1, 1, 1
        		Line:
            		width: 0.5
            		rectangle: self.x, self.y, self.width, self.height
		
		
    	Button:
			id: main_wipe_device
			text: 'Wipe Device'
			font_size: root.height // 25
        	#font_name: 'terminus'
			background_color: 0, 0, 0, 0
			color: 1, 1, 1, 1
			on_press: root.on_press(wid="main_wipe_device")
			on_release:
                root.on_release(wid="main_wipe_device")
                root.set_screen(name="WipeScreen", direction="left")
			canvas.before:
        		Color:
            		rgba: 1, 1, 1, 1
        		Line:
            		width: 0.5
            		rectangle: self.x, self.y, self.width, self.height

		
    	Button:
			id: main_sign_verify_file
			text: 'Sign / Verify File'
			font_size: root.height // 25
        	#font_name: 'terminus'
			background_color: 0, 0, 0, 0
			color: 1, 1, 1, 1
			on_press: root.on_press(wid="main_sign_verify_file")
			on_release: root.on_release(wid="main_sign_verify_file")
			canvas.before:
        		Color:
            		rgba: 1, 1, 1, 1
        		Line:
            		width: 0.5
            		rectangle: self.x, self.y, self.width, self.height

    	Button:
			id: main_settings
			text: 'Settings'
			font_size: root.height // 25
        	#font_name: 'terminus'
			background_color: 0, 0, 0, 0
			color: 1, 1, 1, 1
			on_press: root.on_press(wid="main_settings")
			on_release: root.on_release(wid="main_settings")
			canvas.before:
        		Color:
            		rgba: 1, 1, 1, 1
        		Line:
            		width: 0.5
            		rectangle: self.x, self.y, self.width, self.height
        
    	Button:
			id: main_about
			text: 'About'
			font_size: root.height // 25
        	#font_name: 'terminus'
			background_color: 0, 0, 0, 0
			color: 1, 1, 1, 1
			on_press: root.on_press(wid="main_about")
			on_release: root.on_release(wid="main_about")
			canvas.before:
        		Color:
            		rgba: 1, 1, 1, 1
        		Line:
            		width: 0.5
            		rectangle: self.x, self.y, self.width, self.height

